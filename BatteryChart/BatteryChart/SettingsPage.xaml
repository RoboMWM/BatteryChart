<Page
    x:Class="BatteryChart.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BatteryChart"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel>
            <ComboBox x:Name="TriggersComboBox" Header="Events to Monitor" Loaded="TriggersComboBox_Loaded" PlaceholderText="Loading...">
                <x:String>None</x:String>
                <x:String>All Events</x:String>
                <x:String>Only plug/unplug</x:String>
                <x:String>Only wake/sleep</x:String>
            </ComboBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="ApplyButton" Content="Register events" Click="ApplyButton_Click"/>
                <ProgressRing x:Name="ApplyProgressRing"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</Page>
